<tr><td style="text-align: right;">9<span class="upsmall">a</span></td><td style="text-align: center;">—</td><td style="text-align: left;">(Septembro)</td><td style="text-align: center;">—</td><td> </td><td style="text-align: center;">—</td><td style="text-align: left;">F (firme)</td></tr>
<tr><td style="text-align: right;">10<span class="upsmall">a</span></td><td style="text-align: center;">—</td><td style="text-align: left;">(Oktobro)</td><td style="text-align: center;">—</td><td> </td><td style="text-align: center;">—</td><td style="text-align: left;">A (al)</td></tr>
